<%- include ("partials/header") %>


<div class='container'>
	<div class='row'>
		<h1 style='text-align:center'>Add a new course</h1>
		<div style='width:30%; margin:25px auto'>
			<form action='/courses' method='post'>
				<div class='form-group'>
					<input class='form-control' type='text' name='code' placeholder='course code'>
				</div>
				<div class='form-group'>
					<input class='form-control' type='text' name='name' placeholder='full course name'>
				</div>
				<div class='form-group'>
					<input class='form-control' type='text' name='description' placeholder='description'>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block'>Submit</button>
				</div>
			</form>
			<a href='/courses'>Go back</a>
		</div>
	</div>
</div>

<%- include ("partials/footer") %>