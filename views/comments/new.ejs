<%- include ("../partials/header") %>

<div class='container'>
	<div class='row'>
		<h1 style='text-align:center'>Write a review</h1>
		<div style='width:30%; margin:25px auto'>
			<form action='/courses/<%= course_ejs._id %>/comments' method='post'>
				<div class='form-group'>
					<textarea class="form-control" rows="10" name='comment[text]' placeholder='Tell us what you think'></textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block'>Submit</button>
				</div>
			</form>
			<a href='/courses'>Go back</a>
		</div>
	</div>
</div>


<%- include ("../partials/footer") %>